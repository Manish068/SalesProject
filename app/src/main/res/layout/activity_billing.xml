<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.BillingActivity">

    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/montserrat"
        android:text="Party Name"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/yourcardid"
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewUnit"
        android:layout_height="40dp"
        android:elevation="1dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/black"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        >
        <Spinner
            android:id="@+id/spinnerPartyName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/textViewUnit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/montserrat"
        android:text="Item Name"
        android:layout_below="@id/yourcardid"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/yourcardid2"
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewUnit2"
        android:layout_height="40dp"
        android:elevation="1dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/black"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        >
        <Spinner
            android:id="@+id/spinnerGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            />
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>